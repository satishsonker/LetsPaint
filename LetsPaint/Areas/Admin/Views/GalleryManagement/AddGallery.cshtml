                                <div class="dx-field-value">
                                    <div id="txtSurface"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md">
                        <div class="dx-fieldset">
                            <div class="dx-field">
                                <div class="dx-field-label">Suitable For<strong class="mandatory">*</strong></div>
                                <div class="dx-field-value">
                                    <div id="txtSuitable"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md">
                        <div class="dx-field">
                            <div class="dx-field-value">
                                <div id="chkIsAvl" style="width:97% !important"></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md">
                        <div class="dx-field">
                            <div class="dx-field-value">
                                <div id="chkHasArtistSign" style="width:97% !important"></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md">
                        <div class="dx-field">
                            <div class="dx-field-value">
                                <div id="chkHasArtistCertificate" style="width:97% !important"></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md"></div>
                    <div class="col-md">
                        <div class="dx-fieldset">
                            <div class="dx-field">
                                <div class="dx-field-label"></div>
                                <div class="dx-field-value">
                                    <div id="btnSave"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

