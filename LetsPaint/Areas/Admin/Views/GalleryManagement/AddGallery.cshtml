<div class="data-container">
    <div class="inner-container">
        <form id="frmAddGallery">
            <div class="form">
               
                <div class="row">
                    <div class="col-md">
                        <div class="dx-fieldset">
                            <div class="dx-field">
                                <div class="dx-field-label">Image<strong class="mandatory">*</strong></div>
                                <div class="dx-field-value">
                                    <div class="card">
                                        <div class="card-body" style="padding:0px;">
                                            <img src="" id="imgPreview" class="img_preview" />
                                            <i class="fas fa-camera img_upload"></i>
                                            <div id="file-uploader" style="display:none;"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md">
                        <div class="dx-fieldset">
                            <div class="dx-field">
                                <div class="dx-field-label">Gallery Type<strong class="mandatory">*</strong></div>
                                <div class="dx-field-value">
                                    <div id="ddlGalleryType"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md">
                        <div class="dx-fieldset">
                            <div class="dx-field">
                                <div class="dx-field-label">Image Title<strong class="mandatory">*</strong></div>
                                <div class="dx-field-value">
                                    <div id="txtTitle"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md">
                        <div class="dx-fieldset">
                            <div class="dx-field">
                                <div class="dx-field-label">Image Badge</div>
                                <div class="dx-field-value">
                                    <div id="txtBadge"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md">
                        <div class="dx-fieldset">
                            <div class="dx-field">
                                <div class="dx-field-label">Description<strong class="mandatory">*</strong></div>
                                <div class="dx-field-value">
                                    <div id="txtDescription"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md">
                        <div class="dx-fieldset">
                            <div class="dx-field">
                                <div class="dx-field-label">Artist<strong class="mandatory">*</strong></div>
                                <div class="dx-field-value">
                                    <div id="ddlArtist"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md">
                        <div class="dx-fieldset">
                            <div class="dx-field">
                                <div class="dx-field-label">Available Qty<strong class="mandatory">*</strong></div>
                                <div class="dx-field-value">
                                    <div id="numAvlQty"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md">
                        <div class="dx-fieldset">
                            <div class="dx-field">
                                <div class="dx-field-label">Product Size<strong class="mandatory">*</strong></div>
                                <div class="dx-field-value">
                                    <div id="txtSize"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md">
                        <div class="dx-fieldset">
                            <div class="dx-field">
                                <div class="dx-field-label">Product Tag<strong class="mandatory">*</strong></div>
                                <div class="dx-field-value">
                                    <div id="txtTags"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md">
                        <div class="dx-fieldset">
                            <div class="dx-field">
                                <div class="dx-field-label">Product Price<strong class="mandatory">*</strong></div>
                                <div class="dx-field-value">
                                    <div id="numPrice"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md">
                        <div class="dx-fieldset">
                            <div class="dx-field">
                                <div class="dx-field-label">Product Medium<strong class="mandatory">*</strong></div>
                                <div class="dx-field-value">
                                    <div id="txtMedium"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md">
                        <div class="dx-fieldset">
                            <div class="dx-field">
