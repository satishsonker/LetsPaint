<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/css/weblayout.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
</head>
<body>
    
        <div class="menu" id="navbar">
            <div class="left-menu">
                <a href="/home/index">  <img src="~/images/logo_md_trans.png" alt="Lets Paint" /></a>
            </div>
            <div class="right-menu">
                <ul class="d-none d-md-block">
                    <li><a href="/home/index"><i class="fas fa-home"></i> Home</a></li>
                    <li>
                        <a href="#"><i class="fas fa-palette"></i> The Artist</a>
                    </li>
                    <li><a href="#"><i class="fas fa-paint-brush"></i> Services</a></li>
                    <li><a href="#"><i class="fas fa-hand-holding-usd"></i> Price</a></li>
                    <li><a href="#"><i class="fas fa-address-book"></i> Contact Us</a></li>
                </ul>
                <i class="fas fa-bars d-md-none d-lg-none d-xl-none humbarger"></i>
            </div>
        </div>
        <ul class="mobile-menu mobile-menu-hidden">
            <li><a href="/home/index"><i class="fas fa-home"></i> Home</a></li>
            <li>
                <a href="#"><i class="fas fa-palette"></i> The Artist</a>
            </li>
            <li><a href="#"><i class="fas fa-paint-brush"></i> Services</a></li>
            <li><a href="#"><i class="fas fa-hand-holding-usd"></i> Price</a></li>
            <li><a href="#"><i class="fas fa-address-book"></i> Contact Us</a></li>
        </ul>
    <div>
        @RenderBody()
    </div>
    <script>
        //$(document).ready(function () {
        //    $('.humbarger').on('click', function () {
        //        $('.mobile-menu').toggleClass('hidden-menu');
        //    });

        //});
        //$(window).resize(function () {
        //    if ($(document).width() > 819) {
        //        $('.mobile-menu').addClass('hidden-menu');
        //    }
        //});
        window.onscroll = function () { scrollFunction() };

        function scrollFunction() {
            if (window.innerWidth > 768) {
                if (document.body.scrollTop > 80 || document.documentElement.scrollTop > 80) {
                    $("#navbar").css({ 'padding': '0px', 'background': '#ffffff' });
                    $('.menu .left-menu img').css({ 'padding': '17px 16px' });
                } else {
                    $("#navbar").css({ 'padding': '25px 0px', 'background': '#ffffffc7' });
                    $('.menu .left-menu img').css({ 'padding': '0px' });
                }
            }
            else {
                 if (document.body.scrollTop > 80 || document.documentElement.scrollTop > 80) {
                    $("#navbar").css({'background': '#ffffff' });
                } else {
                    $("#navbar").css({'background': '#ffffffc7' });
                }

            }
        }

        $(document).on('click', '.humbarger', function () {
            $(this).toggleClass('fa-bars').toggleClass('fa-times');
            $('.mobile-menu').toggleClass('mobile-menu-hidden');
        });
    </script>
</body>
</html>
